<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1200">
    <Grid Background ="#FFB5D5CA">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="320">
            <TextBlock Margin="10,20" FontSize="18" HorizontalAlignment="Center" FontWeight="DemiBold">
                Авторизация
            </TextBlock>
            <Label  FontSize="14">Логин</Label>
            <TextBox x:Name="loginBox" Height="30" Background="#FFD1EEFC"></TextBox>
            <Label FontSize="14">Пароль</Label>
            <PasswordBox x:Name="passwordBox" Height="30" Background="#FFD1EEFC"></PasswordBox>

            <Button Background="#FFE0A9AF" Height="40" Margin="0,30,0,10" FontSize="16" FontWeight="DemiBold" Click="Button_Click">Войти</Button>

            <Button Background="#FFE0A9AF" Height="40" Margin="0,0" FontSize="16" FontWeight="DemiBold" Click="Button_Click_1">Регистрация заказчика</Button>

        </StackPanel>
    </Grid>
</Window>
