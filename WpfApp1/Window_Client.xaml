<Window x:Class="WpfApp1.Window_Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Экран заказчика" Height="450" Width="800">
    <Grid Background ="#FFB5D5CA">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="400"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Background="#FFE0A9AF" Click="Button_Click">Выход</Button>
        <DataGrid Grid.Row="1" x:Name="dataGrid" Initialized="dataGrid_Initialized"></DataGrid>

    </Grid>
</Window>
